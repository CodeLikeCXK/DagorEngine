Root    ?= ../../.. ;
StrictCompile = yes ;
include $(Root)/prog/_jBuild/defaults.jam ;

Location = prog/gameLibs/render/fastGrassBaker ;

TargetType  = lib ;
Target      = gameLibs/render/fastGrassBaker.lib ;

AddIncludes =
  $(Root)/prog/gameLibs/publicInclude
;

if $(Config) != rel && $(Platform) in windows {
  UseProgLibs += 3rdPartyLibs/image/tiff-4.4.0 ;
  UseProgLibs += 3rdPartyLibs/convert/ispc_texcomp ;
  AddIncludes +=
    $(Root)/prog/3rdPartyLibs/convert/ispc_texcomp
    $(Root)/prog/engine/sharedInclude
    $(Root)/prog/gameLibs/rendInst
  ;
  Sources =
    fast_grass_baker.cpp
  ;
} else {
  Sources =
    fast_grass_baker_stub.cpp
  ;
  Target = $(Target:S=-stub.lib) ;
}

CPPopt = ;

include $(Root)/prog/_jBuild/build.jam ;
