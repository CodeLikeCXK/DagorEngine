float4 clouds_hole_pos;

macro USE_CLOUDS_HOLE_POS(code)
  (code) {
    clouds_hole_pos@f4 = clouds_hole_pos;
  }
  hlsl(code) {
    float3 get_clouds_hole_pos_vec()
    {
      #if ALLOW_CLOUD_HOLE
        return float3(clouds_hole_pos.x, 0, clouds_hole_pos.y);
      #else
        return float3(0.0, 0.0, 0.0);
      #endif
    }
  }
endmacro