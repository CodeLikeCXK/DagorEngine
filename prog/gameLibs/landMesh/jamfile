Root    ?= ../../.. ;
Location = prog/gameLibs/landMesh ;

TargetType  = lib ;
Target      = gameLibs/landMesh.lib ;

if $(DclipmapUseRiVtex) = yes {
  Target = $(Target:S=~RiVtex.lib) ;
  CPPopt = -DCLIPMAP_USE_RI_VTEX ;
}

Sources =
  landMicroDetails.cpp
  lmeshManager.cpp
  lmeshRenderer.cpp
#  clipmap.cpp
  virtualtexture.cpp
  landRayTracer.cpp
  lmeshRendererGlue.cpp
  lastClip.cpp
  biomeQuery.cpp
  heightmapQuery.cpp
  lmeshMirroring.cpp
  lmeshHoles.cpp
;

AddIncludes =
  $(Root)/prog/gameLibs/publicInclude
  $(Root)/prog/gameLibs/gamePhys/collision
  $(Root)/prog/engine/sharedInclude
;

UseProgLibs =
  gameLibs/landMesh/rendinstIntegration
  gameLibs/heightmap
  gameLibs/physMap
  3rdPartyLibs/eastl
;

if $(Config) in dbg dev {
  Sources += clipmapDebug.cpp ;
  UseProgLibs += 
    3rdPartyLibs/imgui
    engine/imgui 
  ;
} else {
  Sources += clipmapDebugStub.cpp ;
}

include $(Root)/prog/_jBuild/build.jam ;
