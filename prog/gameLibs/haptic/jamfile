Root    ?= ../../.. ;
Location = prog/gameLibs/haptic ;
TargetType  = lib ;
Target      = gameLibs/haptic.lib ;

include $(Root)/prog/_jBuild/defaults.jam ;

AddIncludes =
  $(Root)/prog/gameLibs/publicInclude
  $(Root)/prog/gameLibs/publicInclude/haptic
;

Sources =
  haptic.cpp
;

if $(Platform) = android {
  Sources += android/haptic_vibration.cpp ;
  AndroidSources = android/android.bundle/src/DagorHaptic.java src/com/gaijinent/common/DagorHaptic.java ;
  AndroidLibProguard = android/android.bundle/and.proguard ;
} else if $(Platform) = iOS {
  Sources +=
    iOS/haptic_vibration.mm
  ;
}

include $(Root)/prog/_jBuild/build.jam ;
